<p id="notice"><%= notice %></p>

<h1>Explains</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Precedure1</th>
      <th>Image1</th>
      <th>Precedure2</th>
      <th>Image2</th>
      <th>Precedure3</th>
      <th>Image3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.explains.each do |explain| %>
      <tr>
        <td><%= explain.title %></td>
        <td><%= explain.precedure1 %></td>
        <td><%= explain.image1 %></td>
        <td><%= explain.precedure2 %></td>
        <td><%= explain.image2 %></td>
        <td><%= explain.precedure3 %></td>
        <td><%= explain.image3 %></td>
        <td><%= link_to 'Show', user_explain_path(@user, explain) %></td>
        <td><%= link_to 'Edit', edit_explain_path(explain) %></td>
        <td><%= link_to 'Destroy', explain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

